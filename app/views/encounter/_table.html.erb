<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <%= "<th>Specie</th>".html_safe if encounters.first["common"] %>
    </tr>
  </thead>
  <tbody>
    <% encounters.each do |e| %>
      <tr>
        <td><%= link_to e.date, encounter_path(e.id) %></td>
        <td><%= e.description %></td>
        <td><%= link_to e.common, specie_path(e.specie_id) if e["common"]%></td>
      </tr>
    <% end %>
  </tbody>
</table>
